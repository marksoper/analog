#!/usr/bin/env node

var sys = require('sys'),
    path = require('path'),
    argv = require('optimist').argv;
    
var help = [
    "usage: server [options]",
    "",
    "Runs the analogsite server at the appropriate stage in development",
    "",
    "options:",
    "  -p             Port that you want the home server to run on      [8000]",
    "  -h, --help     You're staring at it",
].join('\n');

if (argv.h || argv.help) {
  return sys.puts(help);
}

var options = {
  port: argv.p || 8000,
};

//
// Unshift example/lib path so that we can require('analogsite')
//
require.paths.unshift(path.join(__dirname, '..', 'lib'));
var analogsite = require('analogsite');

analogsite.start(options, function (err, server) {
  if (err) {
    return sys.puts('Error starting analogsite server: ' + err.message);
  }
  
  sys.puts('analogsite server listening on http://127.0.0.1:' + options.port);
});

